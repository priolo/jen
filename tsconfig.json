{
  "extends": "@tsconfig/node22",
  "compilerOptions": {
    // "target": "ESNext",
    // "module": "NodeNext",
    // "moduleResolution": "NodeNext",
    
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
  },
  "include": [
    "src",
    "tests",
    "shared"
  ],
  "exclude": [
    "scripts/**/*",
    "node_modules",
    "dist",
    "**/*.test.ts",
    "jen-client"
  ]
}